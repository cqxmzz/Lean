        {
            "label": "build release",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "/p:Configuration=Release",
                "/p:DebugType=portable",
                "/p:WarningLevel=1",
                "/p:SelectedOptimization=true"
            ],
            "group":{
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "close": true,
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build debug",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "/p:Configuration=Debug",
                "/p:DebugType=portable",
                "/p:WarningLevel=1",
                "/p:SelectedOptimization=false"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
